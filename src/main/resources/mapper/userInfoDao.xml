<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.libM.dao.userInfoDao">



    <select id="queryByUsername" resultType="userInfo">
        SELECT
          user_id,
          user_username
        FROM
          userInfo
        WHERE
          user_username=#{username}
    </select>


    <select id="queryAll" resultType="userInfo">
        SELECT
          user_id,
          user_username,
          user_password,
          user_name,
          user_power
        FROM
          userInfo
        ORDER BY
          user_id DESC
        limit #{offset},#{num}
    </select>


    <select id="login" resultType="userInfo">
        SELECT
          user_id
        FROM
          userInfo
        WHERE user_username=#{username}
        AND  user_password=#{password}
    </select>


    <insert id="addUser">
        INSERT INTO
          userInfo(user_username,user_password,user_name,user_power)
        VALUES (#{username},#{password},#{name},#{power})
    </insert>


    <delete id="deleteUser">
        DELETE
        FROM
          userInfo
        WHERE
          user_id=#{userId}
    </delete>

</mapper>